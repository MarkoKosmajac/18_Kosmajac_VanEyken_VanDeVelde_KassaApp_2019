        //Adds a new Article to the list
        public Artikel voegToe(Artikel artikel) {
            if (artikel == null || artikelAlInDatabank(artikel)) throw new  IllegalArgumentException((artikel==null?"Artikel is ongeldig":"Artikel is al in de lijst"));
            artikelen.add(artikel);
            return artikel;
        }

        //Checks if an Article is already in the list
        private boolean artikelAlInDatabank(Artikel artikel) {
            for (Artikel o: artikelen) {
                return o.equals(artikel);
            }
            return false;
        }


        //Better layout for printing all articles
        @Override
        public String toString() {
            String opd = "";
